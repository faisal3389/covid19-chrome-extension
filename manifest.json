{
    "manifest_version": 2,
    "name": "COVID-19 Updates | India",
    "description": "This extension keeps track of the updates on the growing covid-19 cases in india",
    "version": "0.0.1",

    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Open the popup"
    },
    "icons": {
        "16": "assets/img/favicon-16x16.png",
        "32": "assets/img/favicon-32x32.png",
        "48": "assets/img/favicon.ico",
        "128": "assets/img/favicon.ico"
    },
    "homepage_url": "https://github.com/faisal3389/covid19-chrome-extension",
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "permissions": ["storage"],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens the view"
        }
    },
    "content_security_policy": "script-src 'self' 'sha256-qUNZAm0njel3QKanvE5BD7yDxGBsSTDdzVVEhKJizFM='; object-src 'self'"
}
